	<% form_for [:admin, @category, @item], :html => { :multipart => true } do |f| %>
<div style="margin:0;padding:0"><%= f.hidden_field :category_id, :value => @category.id %></div>
<%= f.error_messages -%>
		<div>
		  <%= f.label :title %>
		  <%= f.text_field :title, :maxlength => 60, :class => 'max' %>
		</div>
		<div>
			<%= f.label :position %>
			<%= f.text_field :position, :maxlength => 40, :class => 'max' %>
		</div>
		<div>
		  <%= f.label :body %>
		  <%= f.text_area :body, :size => '80x8' %>
		</div>
		<div>
<% if @item.attachment? %>
			<div class="thumb">
				<%= image_tag @item.attachment.url(:thumb), :class => 'thumb', :width => 100 %><br />
				<%= link_to "Delete image?", delete_attachment_admin_category_item_path, :confirm => 'Are you sure you want to delete this image?' %>
			</div>
<% end %>
			<%= f.label :attachment, "Image:" %> <em>(Max. 2 Mb, JPG)</em>
			<%= f.file_field :attachment, :class => 'file', :size => 14 %>
		</div>
		<p class="action">
		  <%= f.submit "Save Changes", :disable_with => "Saving..." %>
		</p>
	<% end %>