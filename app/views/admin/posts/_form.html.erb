	<% form_for [:admin, @post], :html => { :multipart => true } do |f| %>
<%= f.error_messages -%>
		<div>
		  <%= f.label :title %>
		  <%= f.text_field :title, :maxlength => 128, :class => 'max' %>
		</div>
		<div>
		  <%= f.label :body %>
		  <%= f.text_area :body, :size => '80x15' %>
		</div>	
		<div>
<% unless @post.attachment_file_name.nil? %>
			<div class="thumb">
				<%= image_tag @post.attachment.url(:thumb), :class => 'thumb', :width => 100 %><br />
				<%= link_to "Delete image?", delete_attachment_admin_post_path, :confirm => 'Are you sure you want to delete this image?' %>
			</div>
<% end %>
			<%= f.label :attachment, "Image:" %> <em>(Max. 2 Mb, JPG, PNG or GIF)</em>
			<%= f.file_field :attachment, :class => 'file', :size => 14 %>
		</div>
		<div>
		  <%= f.label :tag_list %>
		  <%= f.text_field :tag_list, :size => 80, :class => 'max' %> <em>(Comma-separated list; e.g. Charity, Events, News)</em>
		</div>	
		<p class="action">
		  <%= f.submit "Save Changes", :disable_with => "Saving..." %>
		</p>
	<% end %>